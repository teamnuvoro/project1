# =============================================================================
# RIYA AI COMPANION - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# See docs/LOCAL_SETUP_GUIDE.md for detailed setup instructions
# =============================================================================

# ---- Application ---------------------------------------------------
NODE_ENV=development
PORT=5000
SESSION_SECRET=your-secure-session-secret-here

# ---- Database (PostgreSQL) -----------------------------------------------
# REQUIRED: Get from Supabase Dashboard > Project Settings > Database
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres

# Individual connection params (for tools like Drizzle Studio)
PGHOST=db.YOUR_PROJECT_REF.supabase.co
PGPORT=5432
PGUSER=postgres
PGPASSWORD=YOUR_PASSWORD
PGDATABASE=postgres

# Development flags (set to false for production)
USE_IN_MEMORY_STORAGE=false
DISABLE_AUTH=false
VITE_DISABLE_AUTH=false

# ---- Supabase Configuration (REQUIRED) -----------------------------------
# Get from: Supabase Dashboard > Project Settings > API
SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
VITE_SUPABASE_URL=https://YOUR_PROJECT_REF.supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ---- AI - Groq API (REQUIRED for chat) -----------------------------------
# Get from: https://console.groq.com/keys
GROQ_API_KEY=gsk_YOUR_GROQ_API_KEY

# ---- AI - Sarvam AI (OPTIONAL - for voice features) ---------------------
SARVAM_API_KEY=your-sarvam-api-key

# ---- Voice Calling - Vapi AI (OPTIONAL) ----------------------------------
# Get from: https://dashboard.vapi.ai
VAPI_PUBLIC_KEY=
VAPI_PRIVATE_KEY=

# ---- Email / OTP (OPTIONAL - for production auth) -----------------------
# For local dev: Leave empty (uses dev mode auto-login)
# For production: Use SMTP credentials
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=Riya <noreply@yourdomain.com>

# ---- Payments - Cashfree (OPTIONAL) --------------------------------------
CASHFREE_APP_ID=your-cashfree-app-id
CASHFREE_SECRET_KEY=your-cashfree-secret
CASHFREE_ENV=SANDBOX
CASHFREE_WEBHOOK_URL=https://yourdomain.com/api/cashfree/webhook
VITE_CASHFREE_MODE=sandbox

# ---- Feature Flags -------------------------------------------------------
# Set to 'true' to use Supabase Edge Functions instead of Express
VITE_USE_EDGE_FUNCTIONS=false

# ---- Frontend Configuration ----------------------------------------------
# API URL for frontend (VITE_ prefix makes it available in browser)
VITE_API_URL=http://localhost:5000

# ---- Replit-specific (leave empty for local development) ----------------
REPLIT_CONNECTORS_HOSTNAME=
REPL_IDENTITY=
WEB_REPL_RENEWAL=
