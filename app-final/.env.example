# =============================================================================
# RIYA AI COMPANION - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# cp .env.example .env
# =============================================================================

# =============================================================================
# DATABASE - Supabase PostgreSQL (REQUIRED)
# =============================================================================
# Get from: Supabase Dashboard > Project Settings > Database
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT-REF].supabase.co:5432/postgres

# Individual connection params (optional - auto-derived from DATABASE_URL)
PGHOST=db.[PROJECT-REF].supabase.co
PGPORT=5432
PGUSER=postgres
PGPASSWORD=your-database-password
PGDATABASE=postgres

# =============================================================================
# SUPABASE - Authentication & Edge Functions (REQUIRED)
# =============================================================================
# Get from: Supabase Dashboard > Project Settings > API
VITE_SUPABASE_URL=https://[PROJECT-REF].supabase.co
VITE_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# Service role key (server-side only, NEVER expose to frontend)
# Get from: Supabase Dashboard > Project Settings > API > Service Role Key
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# =============================================================================
# AI SERVICES - Groq for Hinglish Chat (REQUIRED)
# =============================================================================
# Get from: https://console.groq.com/keys
GROQ_API_KEY=gsk_...

# =============================================================================
# OPTIONAL - OpenAI (for complex reasoning/summaries)
# =============================================================================
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# =============================================================================
# OPTIONAL - Google Gemini AI
# =============================================================================
# Get from: https://aistudio.google.com/apikey
GEMINI_API_KEY=AIza...

# =============================================================================
# OPTIONAL - Voice Calling (Vapi AI)
# =============================================================================
# Get from: https://dashboard.vapi.ai
VAPI_PUBLIC_KEY=your-vapi-public-key
VITE_VAPI_PUBLIC_KEY=your-vapi-public-key
VAPI_PRIVATE_KEY=your-vapi-private-key

# =============================================================================
# OPTIONAL - Voice Calling (Sarvam AI)
# =============================================================================
# Get from: Sarvam AI dashboard
SARVAM_API_KEY=your-sarvam-api-key

# =============================================================================
# OPTIONAL - Payments (Cashfree)
# =============================================================================
# Get from: https://merchant.cashfree.com
CASHFREE_APP_ID=your-app-id
CASHFREE_SECRET_KEY=your-secret-key
CASHFREE_ENV=sandbox
CASHFREE_WEBHOOK_URL=https://your-domain.com/api/cashfree/webhook
VITE_CASHFREE_MODE=sandbox

# =============================================================================
# OPTIONAL - Email (SMTP for OTP)
# =============================================================================
# Get from: Your email provider (Gmail, SendGrid, Mailgun, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=noreply@yourdomain.com
SMTP_SECURE=false

# =============================================================================
# OPTIONAL - Analytics (Amplitude)
# =============================================================================
# Get from: https://analytics.amplitude.com
AMPLITUDE_API_KEY=your-amplitude-key

# =============================================================================
# OPTIONAL - Error Tracking (Sentry)
# =============================================================================
# Get from: https://sentry.io
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# =============================================================================
# OPTIONAL - Feature Flags
# =============================================================================
# Use Edge Functions instead of Express (default: false)
VITE_USE_EDGE_FUNCTIONS=false

# Disable authentication (for development only)
VITE_DISABLE_AUTH=false

# Use in-memory storage instead of database
USE_IN_MEMORY_STORAGE=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Server port (default: 5000)
PORT=5000

# Session secret (generate a random string)
SESSION_SECRET=your-random-session-secret-min-32-chars

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Environment (development, production)
NODE_ENV=development

# Debug mode (verbose logging)
DEBUG=false
